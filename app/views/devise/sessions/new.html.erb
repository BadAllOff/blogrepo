

<div class="card card-container"> <!-- TODO Доделать страницу входа -->
  <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
  <p id="profile-name" class="profile-name-card"></p>
  <h2 class=""><%= t('sign_in') %></h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
    <span id="reauth-email" class="reauth-email"></span>
    <%= f.email_field :email, id: 'inputEmail', class: 'form-control', placeholder:  User.human_attribute_name(:email), required: true,  autofocus: true %>
    <%= f.password_field :password, id: "inputPassword", class: 'form-control', placeholder: User.human_attribute_name(:password), required: true, autocomplete: "off" %>


    <% if devise_mapping.rememberable? -%>
      <div id="remember" class="checkbox">
        <label>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, User.human_attribute_name(:remember_me) %>
        </label>
      </div>
    <% end -%>

    <%= f.submit t('sign_in'), class: 'btn btn-lg btn-primary btn-block btn-signin' %>

  <% end %>
  <!--<a href="#" class="forgot-password">
    Forgot the password?
  </a>-->
</div><!-- /card-container -->

