.card.card-container
  = image_tag 'avatar_2x.png', id: 'profile-img', class: 'profile-img-card'
  p#profile-name.profile-name-card
  h2= t('sign_in')
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f|
    = devise_error_messages!
    span#reauth-email.reauth-email
    = f.email_field :email, id: 'inputEmail', class: 'form-control', placeholder:  User.human_attribute_name(:email), required: true,  autofocus: true
    = f.password_field :password, id: "inputPassword", class: 'form-control col-sm-10', placeholder: User.human_attribute_name(:password), required: true, autocomplete: "off"
    - if devise_mapping.rememberable?
      #remember.checkbox
        label
          = f.check_box :remember_me
          = f.label :remember_me, User.human_attribute_name(:remember_me)
    = f.submit t('sign_in'), class: 'btn btn-lg btn-primary btn-block btn-signin'
  /!
    | <a href="#" class="forgot-password"
    | Forgot the password?
    | </a
/! /card-container
