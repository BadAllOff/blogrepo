<%= form_for [@commentable, @comment] do |f| %> <!--todo добавить стилей и никнейм комментатора -->
  <% if @comment.errors.any? %>
    <div class="error_messages">
      <h2>Please correct the following errors.</h2><!--todo localize-->
      <ul>
        <% @comment.errors.full_messages.each  do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label Article.human_attribute_name(:content) %>
    <%= f.text_area :content, class: 'form-control', placeholder: 'Write your comment.' %> <!--todo localize-->
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %> <!--todo locale submit button -->
  </div>
<% end %>
