<p id="notice"><%= notice %></p>

  <h1><%= @article.title %></h1>
<p>Tags: <%= show_tags(@article) %></p>
  <%= image_tag @article.image.url(:original), class: 'img-responsive' %>

<p>
  <strong>Content:</strong>
  <%= @article.content.html_safe if @article.content %>
</p>

<p>
  <strong>Pub date:</strong>
  <%= @article.pub_date %>
</p>

<%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-default' %> |
<%= link_to 'Back', articles_path, class: 'btn btn-default' %>
