<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Pub date</th>
      <th>Controls
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %> <br/> Tags: <%= show_tags(article) %></td>
        <td><%= article.pub_date %>
        <% if article.show %>
          <span class="label label-success">pub</span>
        <% else %>
          <span class="label label-danger">pub</span>
        <% end %>
        </td>
        <td>
          <div class="btn-group btn-group-sm" role="group" >
            <%= link_to 'Show', article, class: 'btn btn-info' %>
            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %>
            <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: 'btn btn-default' %>
